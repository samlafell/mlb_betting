# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# External API Keys
ODDS_API_KEY=your_odds_api_key_here

# Email Configuration (for notifications)
EMAIL_FROM_ADDRESS=your_email@example.com
EMAIL_APP_PASSWORD=your_app_password_here
EMAIL_TO_ADDRESSES=recipient@example.com

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mlb_betting
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# Database Configuration (for unified config system)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mlb_betting
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Monitoring Dashboard API Security
DASHBOARD_API_KEY=generate_secure_random_key_here
ENABLE_AUTH=true
ENABLE_RATE_LIMIT=true
BREAK_GLASS_RATE_LIMIT=5
SESSION_TIMEOUT=60

# Dashboard Configuration
DASHBOARD_UPDATE_INTERVAL=10
DASHBOARD_ERROR_DELAY=30
DASHBOARD_WS_ERROR_DELAY=15
DASHBOARD_MAX_RECONNECTS=5
DASHBOARD_RECONNECT_INTERVAL=5000
DASHBOARD_RECENT_LIMIT=5
DASHBOARD_NOTIFICATION_TIMEOUT=5000

# Optional: Environment
ENVIRONMENT=development