# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mlb_betting
POSTGRES_USER=your_username
# üö® CRITICAL: Replace with secure password (min 20 chars)
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IMMEDIATELY

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
MLFLOW_DEFAULT_ARTIFACT_ROOT=./mlruns

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
LOG_LEVEL=INFO

# Security (for future public API)
API_SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
PREDICTION_RATE_LIMIT=10

# Model Configuration
MODEL_CACHE_TTL_SECONDS=3600
FEATURE_CACHE_TTL_SECONDS=1800
MAX_BATCH_SIZE=50

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
DEBUG=false
RELOAD=false