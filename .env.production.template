# Production Environment Configuration Template
# Copy to .env.production and update with actual values

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Security Configuration
API_SECRET_KEY=your_production_api_secret_key_here_32_chars_min
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
RATE_LIMIT_REQUESTS_PER_MINUTE=60
PREDICTION_RATE_LIMIT=10

# Database Configuration (Production)
DATABASE_HOST=your_production_db_host
DATABASE_PORT=5432
DATABASE_NAME=mlb_betting_prod
DATABASE_USER=mlb_user
DATABASE_PASSWORD=your_secure_database_password
DATABASE_SSL_MODE=require
DATABASE_MIN_CONNECTIONS=5
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration (Production)
REDIS_URL=redis://your_redis_host:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_SSL=true

# MLflow Configuration (Production)
MLFLOW_TRACKING_URI=postgresql://mlflow_user:mlflow_password@mlflow_db_host:5432/mlflow_prod
MLFLOW_REGISTRY_URI=postgresql://mlflow_user:mlflow_password@mlflow_db_host:5432/mlflow_prod

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=30

# Security Configuration
CORS_MAX_AGE=3600
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=120
KEEPALIVE_TIMEOUT=65