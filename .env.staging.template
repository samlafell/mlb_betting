# Staging Environment Configuration Template
# Copy to .env.staging and update with actual values

# Environment Configuration
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=DEBUG

# API Security Configuration
API_SECRET_KEY=your_staging_api_secret_key_here_32_chars_min
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://staging-api.yourdomain.com
RATE_LIMIT_REQUESTS_PER_MINUTE=120
PREDICTION_RATE_LIMIT=20

# Database Configuration (Staging)
DATABASE_HOST=your_staging_db_host
DATABASE_PORT=5432
DATABASE_NAME=mlb_betting_staging
DATABASE_USER=mlb_staging_user
DATABASE_PASSWORD=your_staging_database_password
DATABASE_SSL_MODE=prefer
DATABASE_MIN_CONNECTIONS=3
DATABASE_MAX_CONNECTIONS=15

# Redis Configuration (Staging)
REDIS_URL=redis://your_staging_redis_host:6379/0
REDIS_PASSWORD=your_staging_redis_password
REDIS_SSL=false

# MLflow Configuration (Staging)
MLFLOW_TRACKING_URI=postgresql://mlflow_staging_user:mlflow_staging_password@mlflow_staging_db_host:5432/mlflow_staging
MLFLOW_REGISTRY_URI=postgresql://mlflow_staging_user:mlflow_staging_password@mlflow_staging_db_host:5432/mlflow_staging

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=15

# Security Configuration
CORS_MAX_AGE=1800
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=0

# Performance Configuration
MAX_WORKERS=2
WORKER_TIMEOUT=60
KEEPALIVE_TIMEOUT=30